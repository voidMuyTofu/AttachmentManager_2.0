{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "globals": {
    "ComponentFramework": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@microsoft/power-apps", "@typescript-eslint"],
  "rules": {
    "no-unused-vars": "off"
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "rules": {
        "no-undef": "off",
        "no-debugger": "off"
      }
    },
    {
      "files": ["*.tsx"],
      "rules": {
        "no-case-declarations": "off"
      }
    }
  ]
}
